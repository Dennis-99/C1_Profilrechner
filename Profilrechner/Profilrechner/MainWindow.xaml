            <Image x:Name="img_L_Profil" HorizontalAlignment="Right" Height="100" Margin="0,265,46,0" VerticalAlignment="Top" Width="100" Source="L-Profil.jpg" Stretch="Fill" MouseLeftButtonDown="img_L_Profil_MouseLeftButtonDown"/>
            <Button x:Name="btn_Exit2" Content="Exit" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="75" FontSize="20" Click="btn_Exit_Click" Height="31"/>
        </Grid>

