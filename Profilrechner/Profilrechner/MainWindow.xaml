            <Button x:Name="btn_SpracheE" Content="English" Margin="322,200,0,0" VerticalAlignment="Top" FontSize="36" Click="btn_SpracheE_Click" Height="52" HorizontalAlignment="Left" Width="156"/>
            <Button x:Name="btn_SpracheF" Content="Français" HorizontalAlignment="Left" Margin="575,200,0,0" VerticalAlignment="Top" Width="155" Height="52" FontSize="36" Click="btn_SpracheF_Click"/>
            <Button x:Name="btn_Exit" Content="Exit" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="75" FontSize="20" Click="btn_Exit_Click" Height="31"/>
        </Grid>

        <Grid x:Name="grid_Profilauswahlimg" Visibility="Hidden">
